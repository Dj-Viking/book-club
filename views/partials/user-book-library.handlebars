{{#each this}}
<section>
  <div>
    Title: {{book_title}}
  </div>
  <div>
    Authors: {{author}}
  </div>
  <div>
    Book Cover:
    {{#if picture}}
    <img src="{{picture}}">
    {{else}}
    No Picture Available!
    {{/if}}
  </div>
  <form method="GET" action="/my-library/delete-book">
    <button id="book-{{id}}" name="book" type="submit" value="{{id}}">Delete From Library</button>
  </form>
  {{!-- VERY IMPORTANT dont add any more attributes to the left of id!!! if you must add one put it to the right of id!! --}}
  {{!-- <button type="book-{{id}}" class="pointer">Delete from Library</button> --}}
  <div class="border-top">

  </div>
</section>
{{/each}}
<script src="/javascript/delete-book.js"></script>